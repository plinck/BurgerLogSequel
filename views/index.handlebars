<section class="container">

    <div class="row d-flex justify-content-center p-2">
        <div class="col-6-sm mx-2">
            <div class="card">
                <div class="card-title my-2">
                    <h4 class="text-center">Not Devoured Yet</h4>
                </div>
                <div class="card-block isNotDevoured">

                    {{#each burgers}}
                    {{#unless this.isDevoured}}
                    <div id="{{this.id}}" class="row mb-2 d-flex justify-content-between">
                        <div class="col-6-sm mx-2">
                            <button type="button" class="btn btn-primary burgersNotDevoured">{{this.name}}</button>
                        </div>

                        <div class="col-6-sm mx-2">
                            <button data-value={{this.id}} data-name="{{this.name}}" type="submit" class="devour btn btn-warning" title="Click to eat the {{this.name}} burger.">Devour>></button>
                        </div>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="col-6-sm mx-2">
            <div class="card">
                <div class="card-title my-2">
                    <h4 class="text-center">Devoured</h4>
                </div>
                <div class="card-block isDevoured">
                    {{#each burgers}}
                    {{#if this.isDevoured}}
                    <div id="{{this.id}}" class="row mb-2 d-flex justify-content-between">
                        <div class="col-10-sm mx-2">
                            <button type="button" class="btn btn-secondary burgersDevoured">{{this.name}}</button>
                        </div>

                        <div class="col-2-sm mx-2">
                            <button data-value={{this.id}} type="submit" class="delete btn btn-link" title="Click to delete the {{this.name}} burger.">
                                <i data-value={{this.id}} class="fa fa-times" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <div class="row d-flex flex-column align-items-center justify-content-center p-2">

        <div class="col-12-sm">
            <div class="card">
                <div class="card-title my-2">
                    <h4 class="text-center">Add a Burger</h4>
                </div>
                <div class="card-block">
                    <form class="form-horizontal form-inputs" action="#">
                        <div class="form-group row m-4">
                            <label for="burgerName" class="col-sm-6 col-form-label">Name (Required)</label>
                            <div class="col-sm-6">
                                <input id="burgerName" type="text" class="form-control-plaintext" placeholder="Bacon Cheese">
                            </div>
                        </div>
                        <div class="col text-center">
                            <button id="addBurger" type="submit" class="btn btn-secondary">
                                <i class="fa fa-check-circle" aria-hidden="true">
                                </i>
                                Add a Burger
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

