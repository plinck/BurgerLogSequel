        <!-- Bootstrap Modal Dialog for Added Burger -->
        <!-- See https://getbootstrap.com/docs/4.0/components/modal/ -->
        <div id="results-modal-dialog" class="modal fade" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h2 class="modal-title"><strong>Burger</strong></h2>
                    </div>
                    <div class="modal-body">
                        <h2><span>Burger Name: </span> <span id="burger-name"></span></h2>
